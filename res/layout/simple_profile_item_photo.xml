<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:id="@+id/tv_label"
              android:layout_alignParentLeft="true"
              android:text="头像"
              android:layout_gravity="center_vertical"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_weight="1"/>

    <ImageView android:id="@+id/img_profile"
               android:src="@drawable/avatar_boy"
               android:layout_toLeftOf="@id/tv_content"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"/>

    <TextView android:id="@+id/tv_content"
              android:layout_alignParentRight="true"
              android:gravity="center_vertical"
              android:drawableRight="@drawable/ic_drawer"
              android:layout_height="fill_parent"
              android:layout_width="wrap_content"/>
</LinearLayout>